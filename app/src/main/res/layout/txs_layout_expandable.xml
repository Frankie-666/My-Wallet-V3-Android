<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="info.blockchain.wallet.viewModel.BalanceTxViewModel"/>
    </data>

    <RelativeLayout
            android:id="@+id/container"
            xmlns:android="http://schemas.android.com/apk/res/android"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/selector_pearl_white_tx"
            android:gravity="start">

        <FrameLayout
                android:id="@+id/tx_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_pearl_white_tx"
                android:clickable="true">

            <View
                    android:id="@+id/top_seperator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="top"
                    android:background="@color/blockchain_light_grey"/>

            <View
                    android:id="@+id/tx_touch_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"/>

            <TextView
                    android:id="@+id/ts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:text="@{viewModel.date}"
                    android:textColor="@color/primary_text_default_material_light"
                    android:textSize="14sp"/>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="top"
                          android:gravity="center_vertical"
                          android:paddingLeft="16dp"
                          android:paddingRight="16dp"
                          android:layout_marginTop="37dp"
                          android:orientation="horizontal">

                <TextView
                        android:id="@+id/direction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@{viewModel.direction}"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="@{viewModel.directionColor}"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/watch_only"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/watch_only"
                        android:padding="4dp"
                        android:visibility="@{viewModel.watchOnlyVisibility}"
                        android:layout_margin="4dp"
                        android:background="@drawable/rounded_view_grey"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:minWidth="120dp"
                    android:layout_height="32dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_gravity="top|right"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:text="@{viewModel.amount}"
                    app:backgroundResource="@{viewModel.amountBackground}"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

            <include
                    layout="@layout/include_txs_details"
                    android:layout_width="match_parent"
                    android:layout_height="252sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="top"
                    android:layout_marginTop="72dp"
                    android:visibility="invisible"/>

            <View
                    android:id="@+id/bottom_seperator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:visibility="invisible"
                    android:background="@color/blockchain_light_grey"/>

        </FrameLayout>
    </RelativeLayout>
</layout>